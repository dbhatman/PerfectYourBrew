<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yourperfectbrew"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.yourperfectbrew.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.yourperfectbrew.QuantityActivity"
            android:label="@string/title_activity_quantity"
            android:parentActivityName="com.example.yourperfectbrew.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourperfectbrew.MainActivity" />
        </activity>
        <activity
            android:name="com.example.yourperfectbrew.BrewActivity"
            android:label="@string/title_activity_brew"
            android:parentActivityName="com.example.yourperfectbrew.QuantityActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourperfectbrew.QuantityActivity" />
        </activity>
    </application>

</manifest>
